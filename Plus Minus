    # Write your code here
    tot = len(arr)
    pos = 0
    neg = 0
    zero = 0
    for i in range(len(arr)):
        if arr[i] < 0:
            neg += 1
        elif arr[i] > 0:
            pos += 1
        else:
            zero += 1
    print(round((pos/tot), 6))
    print(round((neg/ tot), 6))
    print(round((zero/tot), 6))
